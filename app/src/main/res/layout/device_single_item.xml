<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/deviceLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:id="@+id/deviceTitle"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:text="TextView1"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/deviceLogo"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:id="@+id/deviceName"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_below="@+id/deviceTitle"
        android:text="textView2"
        android:textSize="17dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/deviceLogo"
        app:layout_constraintBaseline_toBottomOf="@id/deviceTitle"
        >

    </TextView>

    <TextView
        android:id="@+id/deviceLat"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_below="@+id/deviceTitle"
        android:text="textView2"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/deviceLogo"
        >
    </TextView>

    <TextView
        android:id="@+id/deviceLong"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_below="@+id/deviceTitle"
        android:text="textView2"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/deviceLat"
        app:layout_constraintTop_toBottomOf="@id/deviceLogo"
        >

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>